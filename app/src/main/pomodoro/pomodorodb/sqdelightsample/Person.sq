CREATE TABLE personEntity (
    id INTEGER NOT NULL PRIMARY KEY,
    firstName TEXT NOT NULL,
    lastName TEXT NOT NULL
);

getPersonById:
SELECT *
FROM personEntity
WHERE id = :id;

getAllPersons:
SELECT *
FROM personEntity;

insertPerson:
INSERT OR REPLACE
INTO personEntity
VALUES(?, ?, ?);

deletePersonById:
DELETE FROM personEntity
WHERE id = :id;